<!-- View for creating data that only requires name -->

<h1><%= title %></h1>

<form method="post">
  <div class="form-row">
    <label for="name"><%= label %></label>

    <input
      type="text"
      name="name"
      id="name"
      placeholder="<%= placeholder %>"
      required
    />

    <% if (errors) { %>
    <ul class="input-errors small">
      <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
      <% }) %>
    </ul>
    <% } %>
  </div>

  <div class="options"><button type="submit">Salvar</button></div>
</form>
