<h1><%= platform.name %></h1>

<a href="/plataforma/<%= platform._id %>/editar">Editar</a>

<h2>Produtos para esta plataforma:</h2>

<ul class="cards-list">
  <% allProducts.forEach(function (product) { %>
  <li>
    <a href="<%= product.url %>">
      <div class="game-cover-template"></div>

      <div>
        <p><b><%= product.game.title %></b></p>
        <p class="small"><%= product.price_BRL %></p>
      </div>
    </a>
  </li>
  <% }) %>
</ul>
