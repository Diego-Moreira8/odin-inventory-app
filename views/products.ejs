<h1>Produtos</h1>

<a href="/produto/criar" class="button-link floating">Adicionar produto</a>


<ul class="cards-list">
  <% allProducts.forEach(function (product) { %>
  <li>
    <a href="<%= product.url %>">
      <div class="game-cover-template"></div>

      <div>
        <p><b><%= product.game.title %></b></p>
        <p class="small"><%= product.platform.name %></p>
        <p class="small"><%= product.price_BRL %></p>
      </div>
    </a>
  </li>
  <% }) %>
</ul>
